SGLDIR=../../src
SOURCEDIR := src_level_editor
TARGET := level_editor
EXEC=target
CC=gcc
CFLAGS= -Wall -std=c11 `sdl2-config --cflags` -I$(SGLDIR)
LDFLAGS= `sdl2-config --libs` -lSDL2_image -lSDL2_mixer
SOURCE := $(SGLDIR)/init.c \
$(SGLDIR)/fontmap.c \
$(SGLDIR)/image.c \
$(SGLDIR)/tilemap.c \
$(SGLDIR)/animation.c \
$(SGLDIR)/tileset.c \
$(SGLDIR)/sound.c \
$(foreach DIR,$(SOURCEDIR),$(wildcard $(DIR)/*.c)) \
src/level.c \
src/NPC.c

DEBUG=no
ifeq ($(DEBUG),yes)
	CPPFLAGS = -DDEBUG -g
endif

%.o: %.c
	$(CC) -o $@ -c $< $(CFLAGS)

all: $(EXEC)

target: $(OBJ)
	$(CC) $(SOURCE) -o $(TARGET) $^ $(LDFLAGS) $(CFLAGS) $(CPPFLAGS)

.PHONY: clean

clean:
	rm $(TARGET)